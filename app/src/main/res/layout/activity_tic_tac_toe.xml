<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.siziksu.kotlinTicTacToe.view.main.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/defaultToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_background"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/statistics"
        android:text="@string/statistics"
        android:textColor="#ffababab"
        android:padding="10dp"
        android:textSize="13sp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/button_1"
        app:layout_constraintBottom_toTopOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/defaultToolbar" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_1"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        app:layout_constraintRight_toLeftOf="@+id/button_2"
        app:layout_constraintTop_toTopOf="@+id/button_2"
        android:layout_marginEnd="@dimen/image_button_spacing"
        android:contentDescription="@string/app_name" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_2"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginBottom="@dimen/image_button_spacing"
        app:layout_constraintBottom_toTopOf="@+id/button_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/app_name" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_3"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        app:layout_constraintLeft_toRightOf="@+id/button_2"
        app:layout_constraintTop_toTopOf="@+id/button_2"
        android:layout_marginStart="@dimen/image_button_spacing"
        android:contentDescription="@string/app_name" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_4"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        app:layout_constraintRight_toLeftOf="@+id/button_5"
        app:layout_constraintTop_toTopOf="@+id/button_5"
        android:layout_marginEnd="@dimen/image_button_spacing"
        android:contentDescription="@string/app_name" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_5"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defaultToolbar"
        android:contentDescription="@string/app_name" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_6"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        app:layout_constraintLeft_toRightOf="@+id/button_5"
        app:layout_constraintTop_toTopOf="@+id/button_5"
        android:layout_marginStart="@dimen/image_button_spacing"
        android:contentDescription="@string/app_name" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_7"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        app:layout_constraintRight_toLeftOf="@+id/button_8"
        app:layout_constraintTop_toTopOf="@+id/button_8"
        android:layout_marginEnd="@dimen/image_button_spacing"
        android:contentDescription="@string/app_name" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_8"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_5"
        android:layout_marginTop="@dimen/image_button_spacing"
        android:contentDescription="@string/app_name" />

    <ImageView
        style="@style/AppTheme.ImageButton"
        android:id="@+id/button_9"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        app:layout_constraintLeft_toRightOf="@+id/button_8"
        app:layout_constraintTop_toTopOf="@+id/button_8"
        android:layout_marginStart="@dimen/image_button_spacing"
        android:contentDescription="@string/app_name" />

    <Button
        style="@style/AppTheme.Button"
        android:visibility="gone"
        android:id="@+id/button_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/action_replay" />
</android.support.constraint.ConstraintLayout>
